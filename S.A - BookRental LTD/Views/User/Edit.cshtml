@model S.A___BookRental_LTD.ViewModel.UserViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" form-horizontal">
        <h3>Edit Genre</h3>
        <hr />

        <div class="form-border">
            @Html.HiddenFor(m => m.Id)


            <div class="form-group">
                <div class="col-md-2">
                    @Html.Label("FirstName")
                </div>
                @*@Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "control label col-md-2" })*@
                  <div class="col-md-10">
                             @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                             @Html.ValidationMessageFor(m => m.FirstName,"", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    @Html.Label("LastName")
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    @Html.Label("PhoneNumber")
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    @Html.Label("Email Adress")
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-2">
                    @Html.Label("BirthDate")
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.BirthDate, "{0:MM/dd/yyyy}", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
                </div>
            </div>
            @if (Model.MembershipTypeId == 2)
            {
            <p style="padding-left:10em"><b>Choose "3" if yo want to change the MembershipType to "Pay Per Rental"</b></p>

            <div class="form-group">
                <div class="col-md-2">
                    @Html.Label("Membership Type")
                </div>
                <div class="col-md-10">
                   
                   @Html.TextBoxFor(m => m.MembershipTypeId, new { @Value = Model.MembershipTypeId, @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.MembershipTypeId, "", new { @class = "text-danger" })
                </div>
            </div>
            }
            else
            {
                <p style="padding-left:10em"><b>Choose "2" if yo want to change the MembershipType to "Member"</b></p>

                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.Label("Membership Type")
                                </div>
                                <div class="col-md-10">

                                    @Html.TextBoxFor(m => m.MembershipTypeId, new { @Value = Model.MembershipTypeId, @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.MembershipTypeId, "", new { @class = "text-danger" })
                                </div>
                            </div>
            }
        </div>


    </div>
            <br />
            <div>
                @Html.Partial("_BackToListButtonPartial")
                <input type="submit" value="Save" class="btn btn-sm btn-success" />
            </div>

}

