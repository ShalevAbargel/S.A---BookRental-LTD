@model IEnumerable<S.A___BookRental_LTD.ViewModel.ThumbnailBoxViewModel>
@using S.A___BookRental_LTD.Models
@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <br />
    <br />
    <div class="row">
        <div class="pull-right" style="padding-right:15px;">
            <button type="submit" value="search" class="btn btn-sm btn-primary">
                <span class="glyphicon glyphicon-search"></span> &nbsp; Search
            </button>
        </div>
        <div class="pull-right">
            @*  @Html.Editor("search", new { htmlattributes = new { @class = "form-control input-sm" } })*@


            @{
                List<SelectListItem> listItem = new List<SelectListItem>();
                ApplicationDbContext db = ApplicationDbContext.Create();
                foreach (var item in db.Genres)
                {
                    listItem.Add(new SelectListItem
                    {
                        Text = item.Name,
                        Value = item.Name
                    });
                }
            }
            @Html.DropDownList("search",listItem,"select genre", new { @class = "form-control input-sm" } )

        </div>
    </div>
    <br />
}




<div class="row">
    @foreach (var area in Model)
    {
        @Html.Partial("ThumbnailAreaPartial", area);
    }
</div>
