@model S.A___BookRental_LTD.Models.IndividualPartialButton

@using S.A___BookRental_LTD.Models

<td style="width:400px;">
    <div class="btn-group" role="group">
        @Html.Partial("_IndividualButtonPartial",
                 new IndividualPartialButton
                 {
                     Action = "Edit",
                     ButtonType = "btn-primary",
                     Glyph = "pencil",
                     Text = "Edit Button",
                     GenreId = Model.GenreId,
                     BookId = Model.BookId,
                     CustumerId = Model.CustumerId,
                     MembershipTypeId = Model.MembershipTypeId,
                     UserId = Model.UserId
                 })
        @Html.Partial("_IndividualButtonPartial",
                 new IndividualPartialButton
                 {
                     Action = "Details",
                     ButtonType = "btn-success",
                     Glyph = "list",
                     Text = "Details Button",
                     GenreId = Model.GenreId,
                     BookId = Model.BookId,
                     CustumerId = Model.CustumerId,
                     MembershipTypeId = Model.MembershipTypeId,
                     UserId = Model.UserId
                 })
        @Html.Partial("_IndividualButtonPartial",
                 new IndividualPartialButton
                 {
                     Action = "Delete",
                     ButtonType = "btn-danger",
                     Glyph = "trash",
                     Text = "Delete Button",
                     GenreId = Model.GenreId,
                     BookId = Model.BookId,
                     CustumerId = Model.CustumerId,
                     MembershipTypeId = Model.MembershipTypeId,
                     UserId = Model.UserId
                 })
    </div>

</td>


