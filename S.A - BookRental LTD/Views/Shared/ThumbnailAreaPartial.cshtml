@model S.A___BookRental_LTD.ViewModel.ThumbnailBoxViewModel

<div class="row">
    @if (Model.Thumbnails != null)
    {
        foreach (var thumbnail in Model.Thumbnails)
        {
            if (thumbnail.MostRecomended == true && Model.Thumbnails.Count() != 1)
            {
                <div class="col-xs-6 col-md-3">
                    <div class="thumbnail">
                        <div class="thumbnail-img-container">
                            <a href="@thumbnail.Link"><img class="thumbnail-img" src="@thumbnail.ImageUrl" alt="" /></a>
                        </div>

                        <div class="caption">
                            <h3 style="background-color:red;">most recomended</h3>
                            <h3><a href="@thumbnail.Link">@thumbnail.Title</a></h3>
                            <p>@Html.Raw(thumbnail.Description)</p>
                        </div>
                    </div>
                    <br />
                </div>
            }
            else
            {
            <div class="col-xs-6 col-md-3">            
                <div class="thumbnail">
                    <div class="thumbnail-img-container">
                        <a href="@thumbnail.Link"><img class="thumbnail-img" src="@thumbnail.ImageUrl"  alt="" /></a>
                    </div>

                    <div class="caption">
                        <h3><a href="@thumbnail.Link">@thumbnail.Title</a></h3>
                        <p>@Html.Raw(thumbnail.Description)</p>
                    </div>
                </div>
                <br/>
            </div>
            }
        }
    }
</div>